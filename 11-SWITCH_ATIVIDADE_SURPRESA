<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script>
        $escolha = prompt("Escolha um número de 1 a 4: ")
        switch($escolha)
        {
            case "1":
                document.write("<img src='/imagens/chocolate.jpg' width='25%'>")
                break;
            case "2":
                document.write("<img src='/imagens/iphone.jpg' width='25%'>")
                break;  
            case "3":
                document.write("<img src='/imagens/lixo.jpg' width='25%'>")
                break;
            case "4":
                document.write("<img src='/imagens/money.jpg' width='25%'>")
                break;
            
            default:
                document.write("Opção Inválida!") 
                break;   

        }
    </script>
</head>
