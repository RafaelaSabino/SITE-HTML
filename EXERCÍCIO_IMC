    <script>
        $peso = prompt("Digite seu peso (em kg): ")
        $altura = prompt("Digite sua altura (em cm): ")
        $imc = 0
        $imc = ($peso/($altura * $altura))
        document.write($imc)

        if($imc < 0.00185)
         {
                //alert("BAIXO PESO")
                document.write("IMC = BAIXO PESO")
