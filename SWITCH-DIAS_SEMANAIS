<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        $dia_da_semana = prompt ("Digite o dia da semana: ")
        switch($dia_da_semana)
        {
            case "Segunda":
            case "Terça":
            case "Quarta":
            case "Quinta":
            case "Sexta":
                document.write("Dia da semana")
                break;
                 
            case "Sabado":
            case "Domingo":
                document.write("Final de semana")
                break;

            default:
                document.write("Opção Inválida !")
                break;
        }
    </script>
</head>
<body>
    
</body>
</html>
