    <script>
        $num1 = prompt("Digite a 1° nota: ")
        $num2 = prompt("Digite a 2° nota: ")
        $num3 = prompt("Digite a 2° nota: ")
        $media = ((parseInt($num1) + parseInt($num2) + parseInt($num3)) /3)
        
        document.write(" <center> <font color='blue' size='7'> Tabela de notas </font>")
                document.write("<table border='1' width='600'>")
                document.write("<tr bgcolor='#836FFF' align='center'>")
                document.write(" <td width='350' align='center'><B>NOTA1</B></td>")
                document.write(" <td width='80' align='center'><B>NOTA2</B></td>")
                document.write(" <td width=''  align='center'><B>NOTA3</B></td>")
                document.write(" <td width=''  align='center'><B>MEDIA</B></td>")
                document.write(" </tr>")
                document.write(" <tr>")
                document.write("<td>")
                document.write($num1)
                document.write("</td>")
                document.write("<td>")
                document.write($num2)
                document.write("</td>")
                document.write("<td>")
                document.write($num3)
                document.write("</td>")
                document.write("<td>")
                document.write($media)
                document.write("</td>")
                document.write(" </tr>")
                document.write("</table>")
      
    </script>
    
