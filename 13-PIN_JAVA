<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script>
        document.write("<center><font color='red' size='7'>Jogo do PIN</center></font>")
        $numero_final = prompt("Informe qual será o número/limite do seu laço de repetição: ")

        for ($x = 1; $x <= $numero_final; $x++) {
            if ($x % 4 == 0) {
                document.write("<br><br>PIN!")


            }
            else {
                document.write("<br><br>", $x)

            }

        }



    </script>
