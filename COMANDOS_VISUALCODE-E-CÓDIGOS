------------------- código index.html TABELA (exercício) ------------------------

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<>, initial-scale=1.0">
    <title>Document</title>

    <script>
        $sexo = prompt("Qual é o seu sexo? [M] ou [F]") 
        document.writeln("Sexo =  " + $sexo)

        $idade = prompt("Digite sua idade: ")
        if($idade < 18)
        {
             document.write("Menor de idade")
        }
        else
        {
             document.write("Maior de idade")
        }

       document.write("<br>")
       document.write("<br>")

       if($sexo == "M")
       {
          if($idade < 18) {
            alert("Menino")
          }
          else
          {
            alert("Homem")
          }
       }
       else
       {

       }
       document.write("<br>")
       document.write("<br>")

       if($sexo == "F")
       {
          if($idade < 18) {
            alert("Menina")
          }
          else
          {
            alert("Mulher")
          }
       }
       else
       {

       }

       document.write("<center>")
       document.write("<font color='red' size='6' > SENAI / SUMARÉ </font>")
       document.write("<br>")
       document.write("<img src='../imagens/homens/homem2.jpg' width='20%''>") 
       document.write("<br>")
    </script>
</head>
<body>
